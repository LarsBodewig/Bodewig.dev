{% doc %}
    @param {string} email
    @param {object} this - { lang: string; }
{% enddoc %}

<a
    href="#"
    class="link"
    data-email="{{ email | encode }}"
>
    {%- if lang == 'Deutsch' -%}
        Bitte aktivieren Sie JavaScript zum Anzeigen der E-Mail-Adresse
    {%- else -%}
        Please activate JavaScript to display the email address
    {%- endif -%}
</a>
