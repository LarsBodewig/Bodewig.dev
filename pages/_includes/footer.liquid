<footer class="footer">
    <nav class="endnav">
        <ul class="menu">
            {%- assign colPage = page from collections.all -%}
            {%- assign localized = collections.endnav | where: "data.lang", colPage.data.lang -%}
            {%- for item in localized -%}
                <li class="menu-item">
                    <a
                        class="menu-item-link"
                        href="{{ item.url | url }}"
                        {%- if page.url == item.url -%}
                            aria-current="page"
                        {%- endif -%}
                    >
                        {{- item.data.title -}}
                    </a>
                </li>
            {%- endfor -%}
        </ul>
    </nav>
</footer>
